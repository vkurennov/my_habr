<h1>Категории</h1>

<table>
  <thead>
  <tr>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td>
          <%= div_for category do %>
            <%= category.title %>
          <% end %>
          <%= render 'form', category: category, hidden: true %>
        </td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', '#', class: 'edit_category_link', data: { category_id: category.id } %></td>
        <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая категория', new_admin_category_path %>